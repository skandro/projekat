<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.IMCONSALTING.company.Company" table="companies" catalog="project" optimistic-lock="version" >
        <id name="id" type="int">
            <column name="id_company"/>
            <generator class="identity"/>
        </id>
        <property name="name" type="string">
            <column name="name" not-null="true" length="45"/>
        </property>
        <property name="address" type="string">
            <column name="address" not-null="true" length="45"/>
        </property>
        <property name="contact" type="string">
            <column name="contact" not-null="true" length="45"/>
        </property>
    </class>
</hibernate-mapping>