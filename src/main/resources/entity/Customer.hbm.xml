<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.IMCONSALTING.customer.Customer" table="customers" catalog="project" optimistic-lock="version" >
        <id name="id" type="int">
            <column name="id_customer"/>
            <generator class="identity"/>
        </id>
        <property name="name" type="string">
            <column name="name" not-null="true" length="45"/>
        </property>
        <property name="surname" type="string">
            <column name="surname" not-null="true" length="45"/>
        </property>
        <!-- <property name="birthday" type="localdate">
            <column name="birthday" not-null="true"/>
        </property>         -->

        <property name="address" type="string">
            <column name="address" not-null="true" length="45"/>
        </property>
        <property name="mobile" type="string">
            <column name="mobile" not-null="true" length="45"/>
        </property>
        <property name="email" type="string">
            <column name="email" not-null="true" length="45"/>
        </property>
    </class>
</hibernate-mapping>
